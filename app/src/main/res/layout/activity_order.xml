<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waterorderv2.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFon"
        android:orientation="vertical"
        android:isScrollContainer="true">

        <android.support.v7.widget.CardView
            android:id="@+id/razdel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BigCardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вартість поточного\nзамовлення:  "
                    android:layout_margin="10dp"
                    style="@style/TextViewRazdel"/>

                <View
                    android:id="@+id/View04"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#616161" />

                <EditText
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:hint="Ім'я.."
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/etUserAdress"
                    android:layout_width="match_parent"
                    android:hint="Адреса.."
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/etUserPhone"
                    android:layout_width="match_parent"
                    android:hint="Номер телефону.."
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/View05"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#616161" />

                <CheckBox
                android:id="@+id/cbPost"
                android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:checked="true"
                android:layout_width="wrap_content"
                android:text="Доставка Поштою"
                android:layout_height="wrap_content" />



                <CheckBox
                    android:id="@+id/cbNewPost"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:text="Доставка Новою Поштою"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/cbDost"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:text="Кур'єрська Доставка"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/View06"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#616161" />

                <CheckBox
                    android:id="@+id/cbCard"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:text="Сплатити карткою"
                    android:layout_height="wrap_content" />



                <CheckBox
                    android:id="@+id/cbNal"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:text="Сплатити готівкою"
                    android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/butOrder"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:onClick="RegOrder"
                        android:text="Оформити замовлення" />



            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
