<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigCardView">
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">20sp</item>
        <item name="cardElevation">8sp</item>
    </style>

    <style name="SmallCardView">
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">10sp</item>
        <item name="cardElevation">8sp</item>
    </style>

    <style name="TextViewSmallCard">
        <item name="android:layout_margin">2dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:minLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ImageViewSmallCard">
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">7dp</item>
    </style>


    <style name="ImageViewRecept">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">15dp</item>
    </style>


    <style name="TextViewRazdel">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">18sp</item>
        <item name="android:paddingTop">7sp</item>
    </style>

</resources>
